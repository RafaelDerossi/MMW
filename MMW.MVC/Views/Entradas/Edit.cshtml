@model MMW.Aplicacao.ViewModels.EntradaViewModel

@{
    ViewData["Title"] = "Editar Entrada";
}

<h1>Editar Entrada</h1>

<h4>Entrada</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Loja" class="control-label"></label>
                <select asp-for="LojaId" asp-items="ViewBag.lojaId" class="form-control"></select>
                <span asp-validation-for="LojaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fornecedor" class="control-label"></label>
                <select asp-for="FornecedorId" asp-items="ViewBag.fornecedorId" class="form-control"></select>
                <span asp-validation-for="FornecedorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataEmissaoNota" class="control-label"></label>
                <input asp-for="DataEmissaoNota" class="form-control" />
                <span asp-validation-for="DataEmissaoNota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroNota" class="control-label"></label>
                <input asp-for="NumeroNota" class="form-control" />
                <span asp-validation-for="NumeroNota" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" class="form-control" />
            
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
