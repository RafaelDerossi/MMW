@model MMW.Aplicacao.ViewModels.EstoqueViewModel

@{
    ViewData["Title"] = "Editar Estoque";
}

<h1>Editar Estoque</h1>

<div class="row">
    <div class="col-lg-12">
        <div class="img-thumbnail">
            <h4>Produto</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Produto.Descricao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Produto.Descricao)
                </dd>
            </dl>
        </div>
    </div>
</div>


<h4>Estoque</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdutoId" class="form-control" />
            <input type="hidden" asp-for="LojaId" class="form-control" />
            <input type="hidden" asp-for="Id" class="form-control" />

            <div class="form-group">
                <label asp-for="EmEstoque" class="control-label"></label>
                <input asp-for="EmEstoque" class="form-control" />
                <span asp-validation-for="EmEstoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="localizacao" class="control-label"></label>
                <input asp-for="localizacao" class="form-control" />
                <span asp-validation-for="localizacao" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Voltar", "Index", "Estoques", new { produtoId = Model.ProdutoId })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
