@model MMW.Aplicacao.ViewModels.LojaViewModel

@{
    ViewData["Title"] = "Editar Loja";
}

<h1>Editar Loja</h1>

<h4>Loja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CNPJ" class="control-label"></label>
                <input asp-for="CNPJ" class="form-control" />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RazaoSocal" class="control-label"></label>
                <input asp-for="RazaoSocal" class="form-control" />
                <span asp-validation-for="RazaoSocal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fantasia" class="control-label"></label>
                <input asp-for="Fantasia" class="form-control" />
                <span asp-validation-for="Fantasia" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" class="form-control" />            
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
